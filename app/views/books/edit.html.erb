<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>
<p>Title <%= f.text_field :title %></p>
<p>Opinion <%= f.text_area :body %></p>
<%= f.submit "Update Book" %>
<% end %>

<% if @book.user == current_user %>
   <%= link_to "Show", book_path(@book) %>
   <%= link_to "Back", books_path(@book) %>
<% end %>