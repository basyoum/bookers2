<script src="https://kit.fontawesome.com/b4084b3cf0.js" crossorigin="anonymous"></script>

<div class = "container px-5 px-sm-0">
 <div class = "row" >
 <div class = "col-md-3">

<%= render 'users/list', user:@user, book:@book %>
</div>

<div class = "col-md-8 offset-md-1">
<h1>Users</h1>
<table class = "table table-hover">
  <tr>
<td>image</td>
<td>name</td>
<td></td>
</tr>
<tbody>
<% @users.each do |user| %>
<tr>
<td><%= image_tag user.get_profile_image(100,100) %></td>
<td><%= user.name %></td>
<td><%= link_to "Show", user_path(user.id) %></td>
</tr>
<% end %>
</tbody>
</table>
</div>

</div>
</div>