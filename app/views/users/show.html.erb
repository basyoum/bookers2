<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name:<%= @user.name %></h4>
  <h4>introduction:<%= @user.introduction %></h4>
  <p>ユーザー情報編集画面へのリンク画像のリンクにする</p>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>New book</h1>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
 <% end %>



<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(@user.id) do %>
   <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <p>Title<%= link_to book.title, "/books/#{book.id}" %></p>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>