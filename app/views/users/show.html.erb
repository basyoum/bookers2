<% if flash[:notice] %>
 <div class = "flash">
  <%= flash[:notice] %>
 </div>
<% end %>

<div>
  <h1>User info</h1>
  <%= link_to user_path(@user.id) do %>
   <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <h4>name:<%= @user.name %></h4>
  <h4>introduction:<%= @user.introduction %></h4>

  <div class = "cog-icon">
  <% if @user == current_user %>
   <%= link_to edit_user_path(@user) do %>
    <i class="fa-solid fa-user-gear"></i>
   <% end %>
  <% end %>
  </div>

</div>


<h1>New book</h1>
<% if @user == current_user %>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
 <% end %>
<% end %>


<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(@user.id) do %>
   <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <p>Title<%= link_to book.title, "/books/#{book.id}" %></p>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>